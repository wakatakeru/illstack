<p>
  <%= link_to new_image_path, :class => "btn btn-primary btn-block" do %>
    <span class="glyphicon glyphicon-file"></span>画像の新規投稿
  <% end %>
</p>
<hr>
<% @images.reverse_each do |item| %>
<p>
  <h3><%= item.title %></h3>
  <%= link_to image_tag("#{item.thumbnail}", :class => "img-responsive"), image_path(item.id) %>
</p>
<hr>
<% end %>
